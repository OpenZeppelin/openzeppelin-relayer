# Example environment variables for RPC URLs
# Copy this file to .env and fill in your actual RPC URLs

# Ethereum Mainnet
ETH_MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# Sepolia Testnet
SEPOLIA_RPC_URL_PRIMARY=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
SEPOLIA_RPC_URL_FALLBACK=https://sepolia.alchemy.com/v2/YOUR_ALCHEMY_KEY
SEPOLIA_EXPLORER_API=https://api-sepolia.etherscan.io/api

# Solana Mainnet
SOLANA_MAINNET_RPC_URL=https://api.mainnet-beta.solana.com

# Stellar Mainnet
STELLAR_HORIZON_URL=https://horizon.stellar.org

# Keystore Configuration
KEYSTORE_PASSPHRASE=YOUR_SECURE_PASSWORD

# Webhook Configuration
WEBHOOK_SIGNING_KEY=YOUR_WEBHOOK_SIGNING_KEY

# API Configuration
API_KEY=YOUR_API_KEY

# Redis Configuration (if using external Redis)
REDIS_URL=redis://localhost:6379

# Metrics Configuration
METRICS_ENABLED=false
